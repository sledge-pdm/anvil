{
  "name": "@sledge-pdm/anvil",
  "version": "1.1.0",
  "description": "A buffer operations package for sledge.",
  "author": "innsbluck",
  "license": "MIT",
  "private": false,
  "type": "module",
  "sideEffects": true,
  "exports": {
    ".": "./index.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run -c ./vitest.config.ts",
    "bench": "vitest bench -c ./vitest.config.ts",
    "test:coverage": "vitest --coverage",
    "wasm:build": "wasm-pack build ./src/wasm --target bundler && rm ./src/wasm/pkg/.gitignore && rm ./src/wasm/pkg/package.json",
    "prettier": "prettier --write . --config .prettierrc",
    "cargo:format": "cd src/wasm && cargo fmt",
    "format": "pnpm prettier && pnpm cargo:format"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "^5.9.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.15"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  }
}
