{
  "name": "@sledge/anvil",
  "version": "0.0.0",
  "description": "A buffer operations package for sledge.",
  "private": false,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./index.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.9.3",
    "vitest": "^4.0.9",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run -c ./vitest.config.ts",
    "test:coverage": "vitest --coverage",
    "wasm:build": "wasm-pack build ./src/wasm --target bundler",
    "prettier": "prettier --write . --config .prettierrc",
    "cargo:format": "cd src/wasm && cargo fmt",
    "format": "pnpm prettier && pnpm cargo:format"
  }
}
